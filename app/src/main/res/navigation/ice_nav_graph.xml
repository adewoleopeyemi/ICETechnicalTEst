<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ice_nav_graph"
    app:startDestination="@id/boardFragment">

    <fragment
        android:id="@+id/boardFragment"
        android:name="com.iceapk.presentation.Onboarding.BoardFragment"
        android:label="fragment_board"
        tools:layout="@layout/fragment_board" >
        <action
            android:id="@+id/action_boardFragment_to_loginFragment2"
            app:destination="@id/loginFragment"
            app:exitAnim="@anim/fade_out"
            app:enterAnim="@anim/fade_in"/>
        <action
            android:id="@+id/action_boardFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:exitAnim="@anim/fade_out"
            app:enterAnim="@anim/slide_up"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.iceapk.presentation.login.LoginFragment"
        android:label="fragment_login">

    </fragment>


    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.iceapk.presentation.signup.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/fragment_details">

        <action
            android:id="@+id/action_detailsFragment_to_credentialFragment"
            app:destination="@id/credentialFragment" />
    </fragment>
    <fragment
        android:id="@+id/credentialFragment"
        android:name="com.iceapk.presentation.signup.CredentialFragment"
        android:label="CredentialFragment"
        tools:layout="@layout/fragment_credential">
        <action
            android:id="@+id/action_credentialFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

    </fragment>

</navigation>