<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:forceDarkAllowed="false">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="Let's get to know you"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:letterSpacing="-0.04"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30sp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us a bit about yourself"
        android:textColor="#170E21"
        android:textSize="14sp"
        android:letterSpacing="-0.02"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintBottom_toTopOf="@id/first_name"
        app:layout_constraintEnd_toEndOf="@id/textView1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:text="FirstName"
        android:textColor="#170E21"
        android:textSize="12sp"
        android:letterSpacing="-0.01"
        app:layout_constraintBottom_toTopOf="@id/first_name"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_bg"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:hint="First Name"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        android:letterSpacing="-0.02"
        app:layout_constraintBottom_toTopOf="@id/last_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:textColor="#170E21"
        android:letterSpacing="-0.01"
        android:textSize="12sp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/first_name"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintBottom_toTopOf="@id/last_name"
        app:layout_constraintEnd_toEndOf="@id/textView1"
        app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
        android:id="@+id/last_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:letterSpacing="-0.02"
        android:background="@drawable/edit_bg"
        android:hint="Last Name"
        android:textSize="14sp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        app:layout_constraintTop_toBottomOf="@id/first_name"
        app:layout_constraintBottom_toTopOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:letterSpacing="-0.01"
        android:textColor="#170E21"
        android:textSize="12sp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/last_name"
        app:layout_constraintStart_toStartOf="@id/textView1"
        app:layout_constraintBottom_toTopOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/textView1"
        app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:letterSpacing="-0.02"
        android:background="@drawable/edit_bg"
        android:hint="Enter email"
        android:textSize="14sp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/last_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cpp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:letterSpacing="-0.01"
        android:fontFamily="@font/plus_jakarta_sans_medium"/>

    <com.hbb20.CountryCodePicker
        android:id="@+id/cpp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="0.25"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintEnd_toStartOf="@id/phone"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/email"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_bg"
        android:paddingTop="5dp"
        app:ccp_defaultPhoneCode="234"
        app:ccp_showNameCode="false"
        app:ccp_textSize="14sp"
        app:ccpDialog_textColor="@color/white"
        app:ccp_autoDetectCountry="true"
        app:ccp_autoFormatNumber="true"
        />

    <EditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_weight="0.8"
        android:background="@drawable/edit_bg"
        android:inputType="number"
        android:editable="false"
        android:hint="80 000 0000"
        android:singleLine="true"
        android:textColor="@color/black"
        android:letterSpacing="-0.02"
        android:textColorHint="@color/grey"
        android:paddingStart="15dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintStart_toEndOf="@id/cpp"
        app:layout_constraintBottom_toTopOf="@id/next"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="5dp"/>

    <include
        android:id="@+id/next"
        layout="@layout/button"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@drawable/deactivated_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintVertical_bias="0.85"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>